{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-cond-assign": [
            "error",
            "always"
        ],
        "array-bracket-newline": [
			"error",
			"consistent"
        ],
        "brace-style": [
			"error",
			"allman"
        ],
        "eol-last": [
			"error",
			"always"
        ],
        "max-len": [
			"error",
			{
				"code": 120,
				"ignoreComments": true,
				"ignoreUrls": true,
				"ignoreStrings": true,
				"ignoreTemplateLiterals": true,
				"ignoreRegExpLiterals": true
			}
        ],
        "no-trailing-spaces": [
			"error",
			{
				"skipBlankLines": false,
				"ignoreComments": true
			}
        ],
        "prefer-const": [
			"error",
			{
				"destructuring": "all"
			}
        ],
        "arrow-body-style": [
			"error",
			"as-needed"
        ],
        "camelcase": [
			"error",
			{
				"properties": "always"
			}
        ]
    }
}
